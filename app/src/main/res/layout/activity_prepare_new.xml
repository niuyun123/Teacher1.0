<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hanboard.teacher.app.activity.PrepareNewActivity">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/preparenew_back"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/detials_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="最近备课"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/preparenew_menu"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_a10_color" />
    <com.hanboard.teacherhd.lib.refreshview.XRefreshView
        android:id="@+id/preparenew_xrefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:verticalSpacing="8dp"
            android:id="@+id/preparenew_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></GridView>
    </com.hanboard.teacherhd.lib.refreshview.XRefreshView>

</LinearLayout>
