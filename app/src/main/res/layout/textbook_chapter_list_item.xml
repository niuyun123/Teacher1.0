<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/home_cdview_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:padding="8dp"
        android:id="@+id/textbook_chapter_container"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/textbook_chapter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/noet"/>
        <TextView
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/textbook_chapter_name"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" 第一章 声音的传播"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/textbook_chapter_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/tree_ec"/>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/chapter_v_line"
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </TextView>
</LinearLayout>
