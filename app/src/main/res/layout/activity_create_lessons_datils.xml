<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanboard.teacher.app.activity.CreateLessonsDatilsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:id="@+id/relativeLayout">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/back" />
        <TextView
            android:id="@+id/tv_create_lessons_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加备课"
            android:layout_marginRight="10dp"
            android:textColor="@color/theme_color"
            android:id="@+id/tv_add_lessons"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <com.yydcdut.sdlv.SlideAndDragListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_create_lessons_datils"
        android:layout_below="@+id/relativeLayout"
        android:listSelector="@android:color/transparent"
        android:divider="@mipmap/hr"
        android:layout_alignParentStart="true" />
</RelativeLayout>
