<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hanboard.teacher.app.activity.DetialsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:onClick="back"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/detials_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="最近授课"
            android:textSize="18sp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_a10_color" />
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:clickable="true"
            android:id="@+id/detials_tv_left"
            android:background="@drawable/bg_detials_textviewleft"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="教案"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:clickable="true"
            android:id="@+id/detials_tv_center"
            android:background="@drawable/bg_detials_textviewcenter"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="课件"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:clickable="true"
            android:id="@+id/detials_tv_right"
            android:background="@drawable/bg_detials_textviewright"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="习题"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:padding="16dp"
        android:id="@+id/detials_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
